<Window x:Class="LeadtoolsImageBrowser.Net8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LEADTOOLS Preview (.NET 8)" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="Open Image/Document" Click="OpenImage_Click" Padding="10,5" Margin="0,0,10,0"/>
            </StackPanel>
        </Border>

        <!-- 图像显示区域 -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="ImageViewer" Stretch="Uniform" Margin="10" />
        </ScrollViewer>

        <!-- 页面导航 -->
        <StackPanel x:Name="PageNav" Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Background="#80000000" Margin="20" Visibility="Collapsed">
            <Button x:Name="PrevButton" Content="◀ Previous" Click="PreviousPage_Click" Margin="5" Padding="10,5"/>
            <TextBlock x:Name="PageInfo" Text="1 / 1" Foreground="White" 
                       VerticalAlignment="Center" Margin="10,0" FontWeight="Bold"/>
            <Button x:Name="NextButton" Content="Next ▶" Click="NextPage_Click" Margin="5" Padding="10,5"/>
        </StackPanel>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready - Select an image or document to view"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
