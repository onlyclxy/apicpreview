<Window x:Class="PicViewEx.DdsPresetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DDS保存预设选择" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF2D2D30">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="选择DDS保存预设" 
                   FontSize="16" FontWeight="Bold" 
                   Foreground="White" Margin="0,0,0,15"/>
        
        <!-- 预设列表 -->
        <Border Grid.Row="1" BorderBrush="#FF3F3F46" BorderThickness="1" 
                Background="#FF1E1E1E" Margin="0,0,0,10">
            <ListBox x:Name="PresetListBox" 
                     Background="Transparent" 
                     BorderThickness="0"
                     Foreground="White"
                     SelectionMode="Single"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Name}" 
                                       FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding ModifiedDate}" 
                                       FontSize="10" Foreground="#FFAAAAAA" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="Margin" Value="2"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3F3F46"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>
        
        <!-- 分割线和说明 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <Separator Background="#FF3F3F46" Margin="0,5"/>
            <TextBlock Text="提示：您可以将自定义预设文件(.dpf)放入程序根目录的'DDS Presets'文件夹中" 
                       FontSize="10" Foreground="#FFAAAAAA" 
                       TextWrapping="Wrap" Margin="0,5"/>
        </StackPanel>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="CustomPanelButton" Content="自定义面板" 
                    Width="100" Height="30" Margin="0,0,10,0"
                    Background="#FF3F3F46" Foreground="White" 
                    BorderBrush="#FF007ACC" BorderThickness="1"
                    Click="CustomPanelButton_Click"/>
            <Button x:Name="OkButton" Content="确定" 
                    Width="80" Height="30" Margin="0,0,10,0"
                    Background="#FF007ACC" Foreground="White" 
                    BorderThickness="0"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="取消" 
                    Width="80" Height="30"
                    Background="#FF3F3F46" Foreground="White" 
                    BorderThickness="0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>