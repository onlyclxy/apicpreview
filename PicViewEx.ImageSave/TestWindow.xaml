<Window x:Class="PicViewEx.ImageSave.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="图片保存库测试工具" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="0" Background="#FF252526" BorderBrush="#FF3E3E42"
                BorderThickness="0,0,0,1" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnOpen" Content="打开图片" Width="120" Height="40"
                        Background="#FF007ACC" Foreground="White" FontSize="14"
                        Margin="0,0,10,0" Click="BtnOpen_Click"/>
                <Button x:Name="BtnSave" Content="保存" Width="120" Height="40"
                        Background="#FF28A745" Foreground="White" FontSize="14"
                        Margin="0,0,10,0" Click="BtnSave_Click" IsEnabled="False"/>
                <Button x:Name="BtnSaveAs" Content="另存为" Width="120" Height="40"
                        Background="#FFFD7E14" Foreground="White" FontSize="14"
                        Click="BtnSaveAs_Click" IsEnabled="False"/>
                <Separator Width="20" Background="Transparent"/>
                <TextBlock x:Name="TxtImageInfo" VerticalAlignment="Center"
                           Foreground="White" FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- 图片显示区域 -->
        <Border Grid.Row="1" Background="#FF1E1E1E" Margin="15,15,15,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：图片显示 -->
                <Grid Grid.Column="0">
                    <TextBlock Text="请打开一张图片进行测试" FontSize="20"
                               Foreground="#FF555555" HorizontalAlignment="Center"
                               VerticalAlignment="Center" x:Name="TxtPlaceholder"/>

                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  x:Name="ImageScrollViewer"
                                  Visibility="Collapsed">
                        <Image x:Name="DisplayImage" Stretch="None" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <RotateTransform x:Name="ImageRotateTransform"/>
                            </Image.RenderTransform>
                        </Image>
                    </ScrollViewer>
                </Grid>

                <!-- 右侧：旋转控制 -->
                <Border Grid.Column="1" Background="#FF252526" BorderBrush="#FF3E3E42"
                        BorderThickness="1,0,0,0" Padding="15" Width="150"
                        x:Name="RotationPanel" Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="图片旋转" Foreground="White" FontSize="14"
                                   Margin="0,0,0,15" FontWeight="Bold" HorizontalAlignment="Center"/>

                        <Button x:Name="BtnRotateLeft" Content="↺ 左旋90°" Height="40"
                                Margin="0,5" Background="#FF3E3E42" Foreground="White"
                                BorderBrush="#FF555555" BorderThickness="1" Cursor="Hand"
                                Click="BtnRotateLeft_Click" FontSize="13">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF3E3E42"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF007ACC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="BtnRotateRight" Content="↻ 右旋90°" Height="40"
                                Margin="0,5" Background="#FF3E3E42" Foreground="White"
                                BorderBrush="#FF555555" BorderThickness="1" Cursor="Hand"
                                Click="BtnRotateRight_Click" FontSize="13">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF3E3E42"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF007ACC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="BtnResetRotation" Content="⟲ 重置" Height="35"
                                Margin="0,5" Background="#FF3E3E42" Foreground="White"
                                BorderBrush="#FF555555" BorderThickness="1" Cursor="Hand"
                                Click="BtnResetRotation_Click" FontSize="12">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF3E3E42"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFDC3545"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <TextBlock x:Name="RotationAngleText" Text="当前角度: 0°"
                                   Foreground="#FFAAAAAA" FontSize="12" Margin="0,15,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 分隔线 -->
        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch"
                      Background="#FF3E3E42" ResizeBehavior="PreviousAndNext"/>

        <!-- 日志输出区域 -->
        <Border Grid.Row="3" Background="#FF252526" Padding="15,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="操作日志" Foreground="White" FontSize="14"
                               FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button x:Name="BtnClearLog" Content="清空日志" Width="80" Height="25"
                            Margin="15,0,0,0" FontSize="12" Click="BtnClearLog_Click"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogTextBox" IsReadOnly="True"
                             Background="#FF1E1E1E" Foreground="#FFD4D4D4"
                             BorderThickness="0" TextWrapping="Wrap"
                             FontFamily="Consolas" FontSize="12"
                             VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
