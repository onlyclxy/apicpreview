<Window x:Class="PicViewEx.ImageSave.SaveAsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="另存为" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF2D2D30">

    <Window.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="FormatButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PresetButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="选择保存格式" FontSize="24" FontWeight="Bold"
                   Foreground="White" Margin="0,0,0,20"/>

        <!-- 图片预览和旋转控制 -->
        <Border Grid.Row="1" Background="#FF252526" BorderBrush="#FF3E3E42"
                BorderThickness="1" Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 图片预览 -->
                <Border Grid.Column="0" Width="200" Height="150" Background="#FF1E1E1E"
                        BorderBrush="#FF555555" BorderThickness="1" Margin="0,0,15,0">
                    <Image x:Name="PreviewImage" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <RotateTransform x:Name="ImageRotateTransform"/>
                        </Image.RenderTransform>
                    </Image>
                </Border>

                <!-- 旋转控制 -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="图片旋转" Foreground="White" FontSize="14"
                               Margin="0,0,0,10" FontWeight="Bold"/>
                    <Button x:Name="BtnRotateLeft" Content="↺ 左旋90°" Width="120" Height="35"
                            Margin="0,5" Background="#FF3E3E42" Foreground="White"
                            BorderBrush="#FF555555" BorderThickness="1" Cursor="Hand"
                            Click="BtnRotateLeft_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF3E3E42"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF007ACC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="BtnRotateRight" Content="↻ 右旋90°" Width="120" Height="35"
                            Margin="0,5" Background="#FF3E3E42" Foreground="White"
                            BorderBrush="#FF555555" BorderThickness="1" Cursor="Hand"
                            Click="BtnRotateRight_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF3E3E42"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF007ACC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock x:Name="RotationAngleText" Text="当前角度: 0°" Foreground="#FFAAAAAA"
                               FontSize="12" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 格式选择按钮 -->
        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button x:Name="BtnPng" Content="PNG" Style="{StaticResource FormatButtonStyle}" Click="BtnPng_Click"/>
            <Button x:Name="BtnJpg" Content="JPG" Style="{StaticResource FormatButtonStyle}" Click="BtnJpg_Click"/>
            <Button x:Name="BtnBmp" Content="BMP" Style="{StaticResource FormatButtonStyle}" Click="BtnBmp_Click"/>
            <Button x:Name="BtnTga" Content="TGA" Style="{StaticResource FormatButtonStyle}" Click="BtnTga_Click"/>
            <Button x:Name="BtnDds" Content="DDS" Style="{StaticResource FormatButtonStyle}" Click="BtnDds_Click"/>
        </WrapPanel>

        <!-- 参数设置区域 -->
        <Border Grid.Row="3" Background="#FF252526" BorderBrush="#FF3E3E42"
                BorderThickness="1" Padding="15" CornerRadius="5"
                Visibility="Collapsed" x:Name="OptionsPanel">
            <StackPanel>
                <!-- JPG质量设置 -->
                <StackPanel x:Name="JpgQualityPanel" Visibility="Collapsed">
                    <TextBlock Text="JPEG 压缩质量" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="JpgQualitySlider" Grid.Column="0" Minimum="1" Maximum="100"
                                Value="85" TickFrequency="1" IsSnapToTickEnabled="True"
                                VerticalAlignment="Center" ValueChanged="JpgQualitySlider_ValueChanged"/>
                        <TextBox x:Name="JpgQualityTextBox" Grid.Column="1" Text="85"
                                 FontSize="14" Padding="5" Margin="10,0,0,0"
                                 VerticalContentAlignment="Center" TextAlignment="Center"/>
                    </Grid>
                </StackPanel>

                <!-- DDS预设设置 -->
                <StackPanel x:Name="DdsPresetPanel" Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <RadioButton x:Name="RbDdsPreset" Grid.Column="0" Content="使用预设"
                                     Foreground="White" FontSize="14" IsChecked="True"
                                     GroupName="DdsMode" Margin="0,0,0,10"/>
                        <RadioButton x:Name="RbDdsCustom" Grid.Column="1" Content="自定义（NVIDIA UI）"
                                     Foreground="White" FontSize="14"
                                     GroupName="DdsMode" Margin="20,0,0,10"/>
                    </Grid>

                    <!-- 预设列表 -->
                    <StackPanel x:Name="PresetListPanel">
                        <!-- 历史预设 -->
                        <TextBlock x:Name="HistoryHeader" Text="最近使用" Foreground="#FF00D1B2"
                                   FontSize="12" Margin="0,5,0,5" Visibility="Collapsed"/>
                        <ItemsControl x:Name="HistoryPresetsList" Margin="0,0,0,10"/>

                        <!-- 所有预设 -->
                        <TextBlock Text="所有预设（按修改时间排序）" Foreground="#FF00D1B2"
                                   FontSize="12" Margin="0,5,0,5"/>
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="AllPresetsList"/>
                        </ScrollViewer>
                    </StackPanel>
                </StackPanel>

                <Button x:Name="BtnSave" Content="保存" Width="100" Height="35"
                        Margin="0,15,0,0" HorizontalAlignment="Right"
                        Background="#FF007ACC" Foreground="White" FontSize="14"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
